@model worbench.Models.ServiceOrder
@{
    ViewData["Title"] = "Edycja statusu zlecenia";
    var statuses = ViewBag.Statuses as string[];
}
<h2>Edycja statusu zlecenia #@Model.Id</h2>
<form asp-action="EditStatus" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" id="status" name="status">
            @foreach (var s in statuses)
            {
                if (s == Model.Status)
                {
                    @:<option value="@s" selected="selected">@s</option>
                }
                else
                {
                    @:<option value="@s">@s</option>
                }
            }
        </select>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-action="Dashboard" class="btn btn-secondary">Powr√≥t</a>
    </div>
</form> 